{% extends 'base.html.twig' %}
{% block title %}Make an Appointement{% endblock %}

{% block body %}
<script>
$(document).ready(function() {
       // configure the bootstrap datepicker
       $('.js-datepicker').datepicker({
           format: 'yyyy-mm-dd',
           startDate: '-3d'
       });
   });
</script>
<div class="jumbotron">
        <div class="container">
             <h1><center>Appointement:</center> </h1>
        </div>
</div>



<div class="container">
	<div class="row">
		{{ form_start(form) }}
                    <div class="row">
                    	<div class="col-md-6">
                  		<div class="form-group">
                      {{ form_label(form.dateRDV) }}
                      {{ form_widget(form.dateRDV) }}
                  		</div>
                  	</div>
                  	</div>
                  	<div class="row">
                  		<div class="col-md-12">

                      {{ form_label(form.description) }}
                  		<div class="form-group">
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                  		</div>
                  	</div>
                    </div>
                    <div class="row">
                    <div class="col-md-12">
                  <button type="submit" class="btn btn-success">Chek availability</button>
                  </div>
                  </div>
                </form>
	</div>
</div>

          {{ form_widget(form.nomPatient) }}

          {{ form_widget(form.nomMedecin) }}









    {{ form_end(form) }}
    </div>
</div>
{% block stylesheets %}
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/css/bootstrap-datepicker.css">


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js"></script>
    <script>
        jQuery(document).ready(function() {
            $('.js-datepicker').datepicker();
        });
    </script>


{% endblock %}
{% endblock %}
