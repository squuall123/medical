{% extends 'base.html.twig' %}
{% block title %}Make an Appointement{% endblock %}


{% block body %}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.3.2/flatpickr.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">

<script src="https://cdnjs.cloudflare.com/ajax/libs/flatpickr/4.3.2/flatpickr.min.js" charset="utf-8"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>


<script type="text/javascript">
        $(document).ready(function() {

          var arr = ["{{ disabledDates | join(',') }}"];
          console.log("{{ disabledDates | join(',') }}".split(','));

          console.log("date = " + Date.now());
            $('.js-datepicker').flatpickr({
                utc: true,
                enableTime: true,
                disable: "{{ disabledDates | join(',') }}".split(','),
                dateFormat: "Y/m/d",
                utc: false,
                enableTime: false,
                dateFormat: "Y-m-d",
                minDate: Date.now(),
                minTime: "08:00",
                maxTime: "18:00",
                time_24hr: true
            });
        });
</script>


<script type="text/javascript">
$(document).ready(function() {
  $('.js-timepicker').timepicker({
    timeFormat: 'H:mm',
    minTime: "08:00",
    maxTime: "18:00",
    startHour: 8,
    interval: 30,
  });
  //console.log();
});
</script>




<div class="jumbotron">
        <div class="container">
             <h1><center>Appointement:</center> </h1>
        </div>
</div>
<div class="container">
    {{ form_start(form) }}
    <div class="row">
      <div class="col-md-6">
      <label>
        Choose the Date :
        </label>
      </div>
      <div class="col-md-6">
  		  {{ form_widget(form.dateRDV) }}
      </div>
    </div>
    <br><br>
    <div class="row">
      <div class="col-md-6">
      <label>
      Choose the time :
      </label>
      </div>
      <div class="col-md-6">
  		  {{ form_widget(form.timeRDV) }}
      </div>
    </div>
      <br><br>
    <div class="row">
      <div class="col-md-6">
      <label>
        Decription :
        </label>
      </div>
      <div class="col-md-6">
  		  {{ form_widget(form.description) }}
      </div>
    </div>

  		<input type="submit" value="Create" class="btn btn-success"/>
  {{ form_end(form) }}


</div>


{% endblock %}
