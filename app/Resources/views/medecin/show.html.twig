{% extends 'base.html.twig' %}

{% block body %}
    <h1>Medecin</h1>

    <table>
        <tbody>

            <tr>
                <th>Email</th>
                <td>{{ medecin.email }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ medecin.name }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ medecin.phone }}</td>
            </tr>
            <tr>
                <th>Specialite</th>
                <td>{{ medecin.specialite }}</td>
            </tr>

        </tbody>
    </table>

    <a href="/consultation/new/{{medecin.id}}/{{app.user.id}}">Prendre RDV</a>

{% endblock %}
