{% extends 'base.html.twig' %}

{% block body %}
    <h1>Freeday</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ freeDay.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if freeDay.date %}{{ freeDay.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Medecinid</th>
                <td>{{ freeDay.medecinId }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('freedays_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('freedays_edit', { 'id': freeDay.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
