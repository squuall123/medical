{% extends 'base.html.twig' %}
{% block body %}
<script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>

<h1>Service</h1>

<table>
  <tbody>
    <tr>
      <th>Id</th>
      <td>{{ service.id }}</td>
    </tr>
    <tr>
      <th>Nom</th>
      <td>{{ service.nom }}</td>
    </tr>
    <tr>
      <th>Description</th>
      <td>{{ service.description }}</td>
    </tr>
    <tr>
      <th>Numtel</th>
      <td>{{ service.numTel }}</td>
    </tr>
  </tbody>
</table>



<!-- New table bootstrap test -->

<table class="table table-striped table-bordered table-list">
                  <thead>
                    <tr>
                        <th>Name</th>
                    </tr>
                  </thead>
                  <tbody>
                          {% for medecin in medecins %}
                          <tr>
                            <td><a class="btn-{{medecin.id}} btn btn-primary btn-lg">{{medecin.name}}</a>

                         <div class="add-panel-{{medecin.id}} panel panel-default" style="display:none">
                           <div class="panel-body">
                             <h3>{{medecin.phone}}</h3>
                             <h3>{{medecin.email}}</h3>
                             <div class="col-md-9 col-lg-push-3">
                               <a href="/medecin/{{medecin.id}}" class="btn-add-submit btn btn-primary">Voir</a>
                               <a href="/consultation/new/{{medecin.id}}/{{app.user.id}}" class="btn-add-submit btn btn-primary">Prendre RDV</a>
                             </div>

                           </div>
                         </div>

                         <script type="text/javascript">
                         $(function(){

                           $(".btn-{{medecin.id}}").click(function() {
                             console.log("clicked");
                             $(".add-panel-{{medecin.id}}").toggle('slow')
                           });

                         });
                         </script></td>
                          </tr>
                          {% endfor %}
                        </tbody>
                </table>



{% endblock %}

